{
  "multipart": [
    {   "when": { "facing": "north" },
      "apply": { "model": "infraredstone:block/module/diode/diode" }
    },
    {   "when": { "facing": "east" },
      "apply": { "model": "infraredstone:block/module/diode/diode", "y": 90 }
    },
    {   "when": { "facing": "south" },
      "apply": { "model": "infraredstone:block/module/diode/diode", "y": 180 }
    },
    {   "when": { "facing": "west" },
      "apply": { "model": "infraredstone:block/module/diode/diode", "y": 270 }
    }

  ]
}
